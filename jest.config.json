{
  "transform": {
    "^.+\\.[t|j]sx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "^.+\\.(jpg|jpeg|png|gif|webp|svg|css)$": "jest-transform-stub"
  },
  "testEnvironment": "jsdom",
  "testPathIgnorePatterns": ["<rootDir>/node_modules/"],
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
  "collectCoverage": true,
  "collectCoverageFrom": ["./lib/**"]
}
